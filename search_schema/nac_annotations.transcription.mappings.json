{
    "nac_annotations": {
        "mappings": {
            "transcription": {
                "_all": {
                    "enabled": true
                },
                "_source": {
                    "enabled": false
                },
                "properties": {
                    "naId": {
                        "type": "long",
                        "store": true
                    },
                    "object_id": {
                        "type": "long",
                        "store": true,
                        "ignore_malformed": true
                    },
                    "page_num": {
                        "type": "integer",
                        "store": true,
                        "ignore_malformed": true
                    },
                    "timestamp": {
                        "type": "date",
                        "format": "yyyy-MM-dd HH:mm:ss"
                    },
                    "transcription": {
                        "type": "text",
                        "fields": {
                            "keyword": {
                                "type": "keyword"
                            }
                        }
                    },
                    "username": {
                        "type": "keyword"
                    }
                }
            }
        }
    }
}
